# Boing Configuration
# Copy this file to .env.local for local development

# VAPID Keys (Required)
# Generate new keys with: npm run generate-keys
NEXT_PUBLIC_VAPID_PUBLIC=<YOUR_VAPID_PUBLIC_KEY_HERE>
VAPID_PRIVATE=<YOUR_VAPID_PRIVATE_KEY_HERE>
VAPID_EMAIL=mailto:<YOUR_EMAIL_HERE>

# Authentication (Optional)
# Set to a secure random string or disable auth by setting ENABLE_AUTH=false
AUTH_TOKEN=<YOUR_AUTH_TOKEN_HERE>
ENABLE_AUTH=true

# Push Notification Settings
PUSH_TTL=0              # Time to live in seconds (0 = immediate delivery)
PUSH_URGENCY=high       # Options: very-low, low, normal, high
MAX_RETRIES=3           # Maximum retry attempts for failed notifications
RETRY_DELAY=1000        # Delay between retries in milliseconds

# Storage Limits
MAX_NOTIFICATIONS=100   # Maximum notifications to store in history
MAX_SUBSCRIPTIONS=1000  # Maximum concurrent subscriptions

# UI Customization
NEXT_PUBLIC_APP_NAME=Boing
NEXT_PUBLIC_APP_DESCRIPTION=Real-time push notifications for your applications
NEXT_PUBLIC_ICON_URL=/icon-192.png
NEXT_PUBLIC_BADGE_URL=/badge-72.png

# Vercel KV Database (Required for production)
# Get these from your Vercel dashboard
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=